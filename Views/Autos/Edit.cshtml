@model CRUD_Sysne_NETCoreWebApp.Models.Autos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Autos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAuto" />
            <div class="form-group">
                <label asp-for="MatriculaAuto" class="control-label"></label>
                <input asp-for="MatriculaAuto" class="form-control" />
                <span asp-validation-for="MatriculaAuto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAuto" class="control-label"></label>
                @*<input asp-for="TipoAuto" class="form-control" />*@
                <select asp-for="TipoAuto" class="form-control">
                    <option>Coche</option>
                    <option>Camioneta</option>
                    <option>Motocicleta</option>
                    <option>Camión</option>
                </select>
                <span asp-validation-for="TipoAuto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreConductor" class="control-label"></label>
                <input asp-for="NombreConductor" class="form-control" />
                <span asp-validation-for="NombreConductor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button>Regresar</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
